    "eslint-plugin-jsdoc": "^44.2.4",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^5.0.0-canary-d1c8cdae3-20230619",
    "eslint-webpack-plugin": "^2.1.0",
