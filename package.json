{
  "name": "@modules/payment-react",
  "version": "1.0.0",
  "description": "An example dapp for making payments on Soroban",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config config/webpack.prod.js",
    "start": "webpack-dev-server --config config/webpack.dev.js",
    "install-if-package-changed": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet yarn.lock && yarn install || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stellar/soroban-react-payment.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently 'pretty-quick --staged' 'lint-staged'",
      "post-merge": "yarn install-if-package-changed",
      "post-checkout": "yarn install-if-package-changed"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 3 firefox version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "prettier": "@stellar/prettier-config",
  "keywords": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stellar/soroban-react-payment/issues"
  },
  "homepage": "https://github.com/stellar/soroban-react-payment#readme",
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/eslint-parser": "^7.24.8",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@stellar/eslint-config": "^1.0.3",
    "@stellar/prettier-config": "^1.2.0",
    "@stellar/tsconfig": "^1.0.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.1.3",
    "babel-polyfill": "^6.26.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.4",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-typescript": "^2.0.0",
